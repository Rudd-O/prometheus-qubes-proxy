#!/bin/bash

port="$1"
if [ "$port" -lt "1025" -o "$port" -gt "65535" ] ; then break ; fi

read handshake
if [ "$handshake" != "+" ] ; then exit ; fi
echo "="

while true ; do
    read var
    if [ "$var" != "?" ] ; then break ; fi
    text=$(curl -s http://127.0.0.1:"$port"/metrics)
    chars=$(echo "$text" | wc -c)
    echo "$chars"
    echo "$text"
done
